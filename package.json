{
  "name": "@rign/smart-home-app",
  "version": "1.3.0",
  "description": "Smart Home app is an application and server to manage SonOff device in local network using LanMode mechanism",
  "main": "index.js",
  "scripts": {
    "build:app": "npm run timestamp && cd app && ng build --prod --output-hashing=none",
    "build:server": "rm -rf dist && cd server && tsc -p tsconfig.build.json",
    "config": "node scripts/init-configuration.js",
    "format:server": "prettier --write \"server/src/**/*.ts\"",
    "deploy": "npm run build:server && npm run build:app && node scripts/post-deploy.js",
    "lint:server": "tslint -p tsconfig.json -c tslint.json",
    "start:app": "npm run timestamp && cd app && ng serve --proxy-config proxy.config.json",
    "start:server": "cd server && nodemon",
    "start": "concurrently \"npm run start:app\" \"npm run start:server\" ",
    "timestamp": "node scripts/timestamp.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/qjon/smart-home-server.git"
  },
  "keywords": [
    "Smart Home",
    "SonOff"
  ],
  "author": "Rafal Ignaszewski <rafal@ignaszewski.pl> http://ignaszewski.pl",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/qjon/smart-home-server/issues"
  },
  "homepage": "https://github.com/qjon/smart-home-server#readme",
  "dependencies": {
    "@angular/animations": "^7.0.4",
    "@angular/cdk": "^7.3.5",
    "@angular/common": "~7.0.0",
    "@angular/compiler": "~7.0.0",
    "@angular/core": "~7.0.0",
    "@angular/forms": "~7.0.0",
    "@angular/http": "~7.0.0",
    "@angular/material": "^7.3.5",
    "@angular/platform-browser": "~7.0.0",
    "@angular/platform-browser-dynamic": "~7.0.0",
    "@angular/router": "~7.0.0",
    "@nestjs/common": "^6.8.3",
    "@nestjs/core": "^6.0.5",
    "@nestjs/platform-express": "^6.0.5",
    "@nestjs/platform-socket.io": "^6.0.5",
    "@nestjs/platform-ws": "^6.0.5",
    "@nestjs/typeorm": "^6.0.0",
    "@nestjs/websockets": "^6.0.5",
    "@ngrx/effects": "^7.3.0",
    "@ngrx/store": "^7.3.0",
    "@ngrx/store-devtools": "^7.3.0",
    "angular2-notifications": "^2.0.0",
    "core-js": "^2.5.4",
    "crypto": "^1.0.1",
    "dotenv": "^8.2.0",
    "js-md5": "^0.7.3",
    "material-icons": "^0.3.1",
    "mysql": "^2.16.0",
    "ngx-socket-io": "^3.0.1",
