{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "paths": {
      "@ri/weather-stations-module": [
        "libs/weather-stations-module/src"
      ],
      "@ri/weather-stations-module/*": [
        "libs/weather-stations-module/src/*"
      ],
      "@ri/objects": [
        "libs/objects/src"
      ],
      "@ri/objects/*": [
        "libs/objects/src/*"
      ]
    }
  },
  "exclude": [
    "node_modules",
    "dist"
  ]
}
